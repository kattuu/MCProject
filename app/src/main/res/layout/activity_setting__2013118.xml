<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Activity_2013118">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_import_export_black_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="30dp"
            android:id="@+id/unit"
            android:textSize="24sp"
            android:text="Units"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:onClick="openUnitDialog"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_import_export_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"/>
        </LinearLayout>


        <TextView
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="30dp"
            android:textSize="24sp"
            android:onClick="openRatingDialog"
            android:id="@+id/rating"
            android:text="Rate the app"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_star_black_24dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"/>
        </LinearLayout>


        <TextView
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_rate_review_black_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="30dp"
            android:textSize="24sp"
            android:id="@+id/feedback"
            android:text="Feedback"
            android:onClick="openFeedbackDialog"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_rate_review_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_group_black_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="30dp"
            android:textSize="24sp"
            android:text="About Us"
            android:onClick="openAboutActivity"
            android:id = "@+id/about"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_group_black_24dp" />

    </LinearLayout>

</ScrollView>
